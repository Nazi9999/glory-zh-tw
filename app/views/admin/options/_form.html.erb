<div class="form-inputs">
  <%= f.input :o_class, label: "選項分類", as: :select, collection: Option::OPTION_CLASS_COLLECTION %>
  <%= f.input :o_item, label: "選項子分類", as: :string %>
  <%= f.input :content, :label =>"內容", :as => :string, input_html: { :rows => 5 } %>
  
  <%= f.input :note, :label => "註記", :as => :string %>
</div>

<div class="form-actions" style="text-align:center">
  <%= f.submit :value => "送出", :class => "btn btn-primary" %>
  <%= link_to "取消", admin_options_path, :class => "btn" %>
</div>