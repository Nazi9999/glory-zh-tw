<div class="form-inputs">
  <%= f.input :name, :label =>"作品名稱", :as => :string %>
  <%= f.input :creator_id, :label => "出生地", :as => :select, :collection => collection_for_artist_name_with_id, :input_html => { :class => :chosen, :mutiple => false } %>
  <%= f.input :description, :label => "作品敘述", :as => :text, input_html: { :rows => 6} %>
  <%= f.input :content, :label => "內容", :as => :text, input_html: { :rows => 15} %>
</div>

<div class="form-actions" style="text-align:center">
  <%= f.submit :value => "送出", :class => "btn btn-primary" %>
  <%= link_to "取消", admin_artist_creations_path(@artist), :class => "btn" %>
</div>