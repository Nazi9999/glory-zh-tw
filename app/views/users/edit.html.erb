<div class="widget-box">
  <div class="widget-content nopadding">
    <%= simple_form_for @user, :url => admin_user_path(@user), :method => :put, :wrapper => :admin do |u| %>
      <%= render :partial => 'users/form', :locals => { :f => u } %>
      <%= u.input :current_password, hint: "請輸入舊密碼做確認" %>
      <div class="form-actions" style="text-align:center">
        <%= u.submit :value => "送出", :class => "btn btn-primary" %>
        <%= link_to "取消", admin_users_path, :class => "btn" %>
      </div>
    <% end %>
  </div>
</div>