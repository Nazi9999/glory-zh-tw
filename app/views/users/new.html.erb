<div class="widget-box">
  <div class="widget-content nopadding">
    <%= simple_form_for @user, :url => admin_users_path, :method => :post, :wrapper => :admin do |u| %>
      <%= render :partial => 'users/form', :locals => { :f => u } %>
      <div class="form-actions" style="text-align:center">
        <%= u.submit :value => "送出", :class => "btn btn-primary" %>
        <%= link_to "取消", admin_users_path, :class => "btn" %>
      </div>
    <% end %>
  </div>
</div>