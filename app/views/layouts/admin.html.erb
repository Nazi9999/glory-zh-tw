<!DOCTYPE html>
<html>
<head>
  <title>繁體中文推廣網站</title>
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <%= stylesheet_link_tag    "admin" %>
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="header">
    <h1><%= link_to "繁體中文推廣網站", admin_root_path %></h1>   
  </div>

  <div id="user-nav" class="navbar navbar-inverse">
    <ul class="nav btn-group">
      <li class="btn btn-inverse">
        <%= link_to("#") do %>
          <i class="icon icon-user"></i>
          <span class="text">Setting</span>
        <% end %>
      </li>
      <li class="btn btn-inverse">
        <%= link_to("#", :method => :delete) do %>
          <i class="icon icon-share-alt"></i>
          <span class="text">Logout</span>
        <% end %>
      </li>
      <li class="btn btn-inverse">
        <%= link_to "Login", "#" %>
      </li>
    </ul>
  </div>

  <div id="sidebar">
    <%= render :partial => "admin/common/sidebar" if user_signed_in? %>
  </div>

  <div id="content">
    <div id="content-header">
      <h1><%= @page_title %></h1>
      <div class="btn-group">
        <%= yield :bts %>
      </div>
    </div>
    <div id="breadcrumb">
      <%= render_crumbs :separator => "" %>
    </div>
    <div class="container-fluid">
      <div class="row-fluid">
        <%- flash.each do |k, message| %>
          <div class="alert fade in alert-<%=k%>">
            <a href="#" class="close" data-dismiss="alert">x</a>
            <%= message %>
          </div>
        <% end %>
        <%= yield %>
      </div>
      <div class="row-fluid">
        <div id="footer" class="span12">
          Footer
        </div>
      </div>
    </div>
  </div>
</body>
</html>
